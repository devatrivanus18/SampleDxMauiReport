@page "/viewer"
@inject IJSRuntime JSRuntime
@implements IDisposable

<div id="sample" style="width:100%; height: 90vh" data-bind="dxReportViewer: $data"></div>

@code {
    protected override void OnAfterRender(bool firstRender)
    {
        JSRuntime.InvokeAsync<string>("JsFunctions.InitWebDocumentViewer", "sample", "SampleReport");
    }

    public void Dispose()
    {
        JSRuntime.InvokeAsync<string>("JsFunctions.Dispose", "sample");
    }
}